@using ThePensionsRegulator.Umbraco.Blocks;
@using Umbraco.Cms.Core.Models.Blocks;
@using Umbraco.Cms.Core.Models.PublishedContent;
@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<OverridableBlockGridItem>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    if (Model.Areas != null && Model.Areas.Any())
    {
        <div class="govuk-grid-row">
            @foreach (var area in Model.Areas)
            {
                <div class="govuk-grid-column govuk-grid-column-one-half">
                    <partial name="GOVUK/BlockGrid" model="area" />
                </div>
            }
        </div>
    }
}
