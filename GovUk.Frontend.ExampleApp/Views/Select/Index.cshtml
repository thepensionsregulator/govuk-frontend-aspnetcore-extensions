@model SelectViewModel
@{
    ViewData["Title"] = "Select";
}

<partial name="GOVUK/ErrorSummary" />

<span class="govuk-caption-xl">GOV.UK Design System</span>
<h1 class="govuk-heading-l">@ViewData["Title"]</h1>

<form asp-controller="Select" asp-action="Post" method="post" novalidate>
    <govuk-client-side-validation>
        <govuk-select asp-for="Field1">
            <govuk-select-label>Field label</govuk-select-label>
            <govuk-select-item value=""></govuk-select-item>
            <govuk-select-item value="1">Item 1</govuk-select-item>
            <govuk-select-item value="2">Item 2</govuk-select-item>
            <govuk-select-item value="3">Item 3</govuk-select-item>
        </govuk-select>
    </govuk-client-side-validation>

    <govuk-button>Submit</govuk-button>
</form>
@section scripts {
    <partial name="GOVUK/Validation" />
}