	  </None>
	  <None Update="__tests__\govuk-validation-validateElement.tests.js">
	    <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
	  </None>
	</ItemGroup>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Styles\_tpr-grid.scss" />
	</ItemGroup>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Styles\_govuk-caption.scss" />
	</ItemGroup>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Styles\_govuk-inset-text.scss" />
	</ItemGroup>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Styles\_govuk-button.scss" />
	</ItemGroup>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Styles\_govuk-panel.scss" />
	</ItemGroup>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Styles\_govuk-radios-checkboxes.scss" />
	</ItemGroup>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Styles\_govuk-link.scss" />
	</ItemGroup>
	
	<ItemGroup>
	  <UpToDateCheckInput Remove="Styles\_tpr-back-to-top.scss" />
	</ItemGroup>
	
